{
    "name": "vault-app",
    "version": "1.1.0",
    "description": "A simple offline password vault (prototype)",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "electron": "^35.7.5",
        "electron-builder": "^24.13.3"
    },
    "build": {
        "appId": "com.example.nestkey",
        "productName": "NestKey",
        "files": [
            "main.js",
            "preload.js",
            "app/**/*",
            "pin.json",
            "vault.json"
        ],
        "extraFiles": [
            {
                "from": "./",
                "to": ".",
                "filter": [
                    "**/pin.json",
                    "**/vault.json"
                ]
            }
        ],
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}